  <script>
    // Sauvegarde automatique
    const inputs = document.querySelectorAll('input, textarea, select');
    
    inputs.forEach(input => {
      const id = input.id;
      
      // Charger la valeur sauvegard√©e
      const saved = localStorage.getItem(`exercices_${id}`);
      if (saved) {
        input.value = saved;
      }
      
      // Sauvegarder √† chaque modification
      input.addEventListener('input', () => {
        localStorage.setItem(`exercices_${id}`, input.value);
        showSaveIndicator();
      });
    });

    // Bouton sauvegarder tout
    document.getElementById('save-all-btn').addEventListener('click', () => {
      const message = document.getElementById('save-message');
      message.classList.remove('hidden');
      setTimeout(() => {
        message.classList.add('hidden');
      }, 3000);
    });

    // Bouton exporter
    document.getElementById('export-btn').addEventListener('click', () => {
      let exportText = '=== MES R√âPONSES AUX EXERCICES GITHUB ===\n\n';
      
      inputs.forEach(input => {
        if (input.value) {
          const label = input.previousElementSibling?.textContent || input.placeholder || input.id;
          exportText += `${label}\n${input.value}\n\n`;
        }
      });
      
      const blob = new Blob([exportText], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'mes-exercices-github.txt';
      a.click();
      URL.revokeObjectURL(url);
    });

    // Indicateur de sauvegarde
    function showSaveIndicator() {
      let indicator = document.getElementById('save-indicator');
      if (!indicator) {
        indicator = document.createElement('div');
        indicator.id = 'save-indicator';
        indicator.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-50';
        indicator.textContent = '‚úì Sauvegard√©';
        document.body.appendChild(indicator);
      }
      indicator.style.display = 'block';
      setTimeout(() => {
        indicator.style.display = 'none';
      }, 1500);
    }

    // Scroll smooth pour les ancres
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
